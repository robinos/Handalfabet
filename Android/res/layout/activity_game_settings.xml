<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameSettingsActivity" >

    <Button
        android:id="@+id/sound_settings_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="35dp"
        android:text="@string/sound_settings_button" />

    <Button
        android:id="@+id/profile_settings_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sound_settings_button"
        android:layout_below="@+id/sound_settings_button"
        android:layout_marginTop="39dp"
        android:text="@string/profile_settings_button" />

</RelativeLayout>
